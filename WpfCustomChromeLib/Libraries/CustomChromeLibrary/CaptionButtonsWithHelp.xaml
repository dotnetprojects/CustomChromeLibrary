<UserControl x:Class="CustomChromeLibrary.CaptionButtonsWithHelp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
			 xmlns:ccl="clr-namespace:CustomChromeLibrary"
             >
	<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="{Binding Path=CaptionButtonMargin}">
		<ccl:HelpButton/>
		<ccl:MinimizeButton CornerRadius="0"/>
		<ccl:MaximizeButton/>
		<ccl:CloseButton/>
	</StackPanel>
</UserControl>
